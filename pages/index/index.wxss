/* index.wxss */
.container{
  width: 100%;
  font-size: 14px;
}
.hide{
  display: none;
}
.noton{
  background:#eaeaee;
}
.top_pic{
  width: 100%;
  height: 200rpx;
  padding-bottom:5rpx;
  background-color:#eaeaee;
}
.top_pic image{
  width: 100%;
  height: 100%;
}

.tag_box{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom:10rpx;
  line-height:80rpx;
}
.tag{
  width: 50%;
  text-align: center;
}

.product_cate{
  width: 100%;
}

.product_item{
  display: flex;
  flex-direction: row;
  height: 200rpx;
  width:90%;
  padding: 20rpx;
  margin: 5rpx 10rpx 5rpx 10rpx;
  border-bottom: 1px solid black;
}

.product_item:first-child{
  border-top: 1px solid black;
}

.banner{
  width:30%;
  height: 180rpx;
  padding: 5rpx 10rpx
}
.banner image{
  width:100%;
  height: 100%;
}

.tp{
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}
.title{
  font-size:18px;
}
.price_text{
  display: flex;
  flex-direction: row;
  width: 300rpx;
  justify-content: space-around;
  line-height: 18rpx;
}
.old_price{
  color:black;
  text-decoration: line-through;
}
.new_price{
  font-size: 18px;
  color:#c40000;
}